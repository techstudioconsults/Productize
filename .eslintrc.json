{
  "root": true,
  "ignorePatterns": [
    "**/*"
  ],
  "plugins": [
    "@nx"
  ],
  "overrides": [
    {
      "files": [
        "*.ts",
        "*.tsx",
        "*.js",
        "*.jsx"
      ],
      "rules": {
        "@nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              // {
              //   "sourceTag": "*",
              //   "onlyDependOnLibsWithTags": [
              //     "*"
              //   ]
              // }
              {
                "sourceTag": "scope:shared",
                "onlyDependOnLibsWithTags": [
                  "scope:shared"
                ]
              },
              {
                "sourceTag": "scope:authentication",
                "onlyDependOnLibsWithTags": [
                  "scope:shared",
                  "scope:authentication"
                ]
              },
              {
                "sourceTag": "scope:external-pages",
                "onlyDependOnLibsWithTags": [
                  "scope:shared",
                  "scope:external-pages"
                ]
              },
              {
                "sourceTag": "scope:explore",
                "onlyDependOnLibsWithTags": [
                  "scope:shared",
                  "scope:explore"
                ]
              },
              {
                "sourceTag": "scope:host",
                "onlyDependOnLibsWithTags": [
                  "scope:shared"
                ]
              }
            ]
          }
        ]
      }
    },
    {
      "files": [
        "*.ts",
        "*.tsx"
      ],
      "extends": [
        "plugin:@nx/typescript"
      ],
      "rules": {}
    },
    {
      "files": [
        "*.js",
        "*.jsx"
      ],
      "extends": [
        "plugin:@nx/javascript"
      ],
      "rules": {}
    }
  ]
}
